root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,pyx,pyi}]
indent_size = 4

[*.{cpp,hpp,cxx,hxx,c,h}]
indent_size = 2

[*.{cu,cuh}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2
